{
	"manifest_version": 3,
	"name": "SP Get Token",
	"version": "1.2",
	"host_permissions": [
		"http://localhost/*"
	],
	"permissions": [
		"activeTab",
		"scripting", 
		"storage",
		"clipboardWrite"
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icon.png",
			"32": "icon.png",
			"48": "icon.png",
			"128": "icon.png"
	  }
	},
	"icons": {
		"16": "icon.png",
		"32": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"content_scripts": [
		{
		  "matches": ["<all_urls>"], 
		  "js": ["inject.js"]
		}
	  ]
}